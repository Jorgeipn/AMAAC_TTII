<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enterprises.devare.amaac_avanzaado.controlador.adapters.Comunicador_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary_light">

        <include layout="@layout/recycler_view_card_item_frase" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- *********************************************************************Verbos********* -->
            <include layout="@layout/recycler_view_card_tablero_verbos" />

            <!-- *********************************************************************Alimentos********* -->
            <include layout="@layout/recycler_view_card_tablero_respuestas" />

            <!-- *********************************************************************Familia*********** -->
            <include layout="@layout/recycler_view_card_tablero_verbos_aux" />

            <!-- *********************************************************************Profesiones ****** -->
            <include layout="@layout/recycler_view_card_tablero_bebidas" />

            <!-- *********************************************************************Lugares ********** -->
            <include layout="@layout/recycler_view_card_tablero_frutas" />

            <!-- *********************************************************************Animales ********* -->
            <include layout="@layout/recycler_view_card_tablero_verduras" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
